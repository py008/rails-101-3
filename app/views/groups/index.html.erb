<div class="col-md-12">
  <div class="group">
    <%= link_to("点评影片", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>影片</td>
        <td>简介</td>
      </tr>
    </thead>
    <tbody>
      <% @groups.each do |group| %>
       <tr>
      
        <td><%= link_to(group.title,group_path(group)) %></td>
        <td><%= group.description %></td>
        <td>
           <%= link_to("Edit", edit_group_path(group), class: "btn btn-sm btn-default")%>
           <%= link_to("Destroy", group_path(group), class: "btn ben-sm btn-default", method: :delete, data: { confirm: "Are you sure? "} )%>
        </td>
       </tr>
      <% end %>
    </tbody>
  </table>
</div>
