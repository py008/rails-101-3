<%= form_for @group do |f| %>
<div class="form-group">
    <div class="form-group string optional">
        <%=  f.label "片名", :class => "string optional control-label" %>
        <%= f.text_field :title, :class => "string optional form-control" %>
    </div>

    <div class="form-gorup string optional">
         <%= f.label "简介", :class => "string optional control-label" %>
         <%= f.text_area :description, :class => "string optional form-control" %>
    </div>
</div>
<%= f.submit "Submint", class: "btn btn-primary", data: { disable_with: "Submiting..." } %>
<% end %>
